<div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">今日よかったことを投稿しましょう！</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
</div>

<%= form_with(model: @good_thing,url:good_things_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :good_1 %>
    <%= form.text_field :good_1 %>
  </div>

  <div class="field">
    <%= form.label :good_2 %>
    <%= form.text_field :good_2 %>
  </div>

  <div class="field">
    <%= form.label :good_3 %>
    <%= form.text_field :good_3 %>
  </div>

  <div id="start-date">
    <%#= form.label :start_date %>
    <%#= form.datetime_select :start_date %>
  </div>

  <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit "登録する",class:"btn btn-primary"%>
  </div>

      <% end %>